<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fun.yozora.admin.repository.mapper.RolePermissionMapper">

    <select id="selectPermissionsByRoleId" resultType="fun.yozora.admin.domain.entity.Permission">
        SELECT p.perm_id AS permId,
               p.perm_name AS permName,
               p.perm_code AS permCode,
               p.description
        FROM role_permission rp
        JOIN permission p ON rp.perm_id = p.perm_id
        WHERE rp.role_id = #{roleId}
    </select>

    <resultMap id="BaseResultMap" type="fun.yozora.admin.domain.entity.RolePermission">
        <id property="roleId" column="role_id" />
        <id property="permId" column="perm_id" />
    </resultMap>

    <sql id="Base_Column_List">
        role_id,perm_id
    </sql>

</mapper>
